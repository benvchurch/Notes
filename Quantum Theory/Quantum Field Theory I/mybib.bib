@article{confinement,
  author={J W Darewych and A Duviryak},
  title={Confinement interaction in nonlinear generalizations of the Wick–Cutkosky model},
  journal={Journal of Physics A: Mathematical and Theoretical},
  volume={43},
  number={48},
  pages={485402},
  url={http://stacks.iop.org/1751-8121/43/i=48/a=485402},
  year={2010},
  abstract={We consider nonlinear-mediating-field generalizations of the Wick–Cutkosky model. Using an iterative approach and eliminating the mediating field by means of the covariant Green's function we arrive at a Lagrangian density containing many-point time-nonlocal interaction terms. In low-order approximations of ##IMG## [http://ej.iop.org/icons/Entities/phiv.gif] {phiv} 3 + ##IMG## [http://ej.iop.org/icons/Entities/phiv.gif] {phiv} 4 theory we obtain the usual two-current interaction as well as a three-current interaction of a confining type. The same result is obtained without approximation for a version of the dipole model. The transition to the Hamiltonian formalism and subsequent canonical quantization is performed with time non-locality taken into account approximately. A relativistic three-particle wave equation is derived variationally by using a three-particle Fock space trial state. The non-relativistic limit of this equation is obtained and its properties are analyzed and discussed.}
}
	

